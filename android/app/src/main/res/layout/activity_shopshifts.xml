<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shopshifts"
    android:layout_width="match_parent"
    android:background="@android:color/background_light"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/shopshifts_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolBarH"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="0dp">
        <FrameLayout
            android:id="@+id/shopshifts_toolbar_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/toolBarPadding">
        </FrameLayout>
    </android.support.v7.widget.Toolbar>

    <View
        android:id="@+id/shopshifts_top_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/shopshifts_toolbar"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/shopshifts_items"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/shopshifts_top_divider"
            android:paddingTop="4dp"/>
</RelativeLayout>
